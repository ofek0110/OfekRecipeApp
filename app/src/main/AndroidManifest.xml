<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OfekRecipeApp">
        
        <!-- מסכים חדשים - חובה לרשום אותם כאן -->
        <activity
            android:name=".screens.AddRecipeActivity"
            android:exported="false"
            android:label="Add New Recipe" />
        <activity
            android:name=".screens.RecipeRequestsActivity"
            android:exported="false"
            android:label="Recipe Requests" />
        <activity
            android:name=".screens.RecipeReviewActivity"
            android:exported="false"
            android:label="Review Recipe" />
            
        <activity
            android:name=".screens.UserProfile"
            android:exported="false" />
        <activity
            android:name=".screens.UsersList"
            android:exported="false" />
        <activity
            android:name=".screens.EditProfile"
            android:exported="false" />
        <activity
            android:name=".screens.MainActivity"
            android:exported="false" />
        <activity
            android:name=".screens.LogIn"
            android:exported="false" />
        <activity
            android:name=".screens.Register"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.OfekRecipeApp" />
        <activity
            android:name=".screens.LandingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
